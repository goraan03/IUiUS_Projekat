<Window x:Class="IUiUS_Projekat.Views.IzmeniKursWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Izmena kursa" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="Naziv kursa:" VerticalAlignment="Center" Width="100"/>
            <TextBox x:Name="NazivBox" Width="400"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 10">
            <TextBlock Text="Cena (€):" VerticalAlignment="Center" Width="100"/>
            <TextBox x:Name="CenaBox" Width="150"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0 0 0 10">
            <Button Content="Promeni sliku" Click="IzaberiSliku_Click" Width="150"/>
            <Image x:Name="SlikaPreview" Width="150" Height="150" Margin="10 0 0 0"/>
        </StackPanel>

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0 10 0 5">
            <Button Click="BoldButton_Click" Width="30">
                <TextBlock FontWeight="Bold">B</TextBlock>
            </Button>
            <Button Click="ItalicButton_Click" Width="30">
                <TextBlock FontStyle="Italic">I</TextBlock>
            </Button>
            <Button Click="UnderlineButton_Click" Width="30">
                <TextBlock TextDecorations="Underline">U</TextBlock>
            </Button>
            <ComboBox x:Name="FontFamilyBox" Width="150" Margin="10 0"/>
            <ComboBox x:Name="FontSizeBox" Width="60" Margin="5 0"/>
            <Button Content="Boja" Click="ColorButton_Click" Width="60" Margin="10 0"/>
        </StackPanel>

        <RichTextBox x:Name="OpisBox" Grid.Row="4" Height="200" Margin="0 0 0 5"/>
        <StatusBar Grid.Row="5" Margin="0 0 0 10">
            <TextBlock x:Name="WordCountText"/>
        </StatusBar>

        <StackPanel Orientation="Horizontal" Grid.Row="6" HorizontalAlignment="Right">
            <Button Content="Sačuvaj" Click="Sacuvaj_Click" Width="100" Margin="5"/>
            <Button Content="Otkaži" Click="Otkazi_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
