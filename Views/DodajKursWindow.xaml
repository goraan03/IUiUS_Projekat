<Window x:Class="IUiUS_Projekat.Views.DodajKursWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj kurs"
        Height="600" Width="800"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Border CornerRadius="15" Padding="20" Background="{StaticResource PanelBrush}">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Naziv kursa:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="NazivBox" Width="300"/>

                <TextBlock Text="Cena (RSD):" Style="{StaticResource LabelStyle}" Margin="0,10,0,0"/>
                <TextBox x:Name="CenaBox" Width="150"/>

                <Button Content="Izaberi sliku" Width="150" Click="IzaberiSliku_Click" Margin="0,10,0,0"/>
                <Image x:Name="SlikaPreview" Width="150" Height="100" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Opis kursa:" Style="{StaticResource LabelStyle}" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Button Content="B" Click="BoldButton_Click"/>
                    <Button Content="I" Click="ItalicButton_Click"/>
                    <Button Content="U" Click="UnderlineButton_Click"/>
                    <ComboBox x:Name="FontFamilyBox" Width="150" Margin="5,0"/>
                    <ComboBox x:Name="FontSizeBox" Width="60"/>
                    <Button Content="Boja" Click="ColorButton_Click" Margin="5,0"/>
                </StackPanel>
                <RichTextBox x:Name="OpisBox" Height="200" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <TextBlock x:Name="WordCountText" VerticalAlignment="Center" Margin="0,0,20,0" Foreground="White"/>
                <Button Content="Dodaj" Width="100" Click="Dodaj_Click"/>
                <Button Content="OtkaÅ¾i" Width="100" Click="Otkazi_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>