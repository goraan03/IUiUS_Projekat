<Window x:Class="IUiUS_Projekat.Views.DodajKursWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodavanje novog kursa" Height="750" Width="800"
        WindowStartupLocation="CenterScreen">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" Margin="0,0,0,10">
			<Label Content="Naziv kursa:"/>
			<TextBox x:Name="NazivBox" Margin="0,0,0,5"/>

			<Label Content="Cena:"/>
			<TextBox x:Name="CenaBox" Margin="0,0,0,5"/>

			<Button Content="Izaberi sliku" Click="IzaberiSliku_Click" Margin="0,0,0,5" Width="150"/>
			<Image x:Name="SlikaPreview" Height="100" Margin="0,0,0,10"/>
		</StackPanel>

		<!-- ToolBar -->
		<ToolBarTray Grid.Row="1" VerticalAlignment="Top">
			<ToolBar>
				<ToggleButton x:Name="BoldButton" Content="B" FontWeight="Bold" Click="BoldButton_Click"/>
				<ToggleButton x:Name="ItalicButton" Content="I" FontStyle="Italic" Click="ItalicButton_Click"/>
				<ToggleButton x:Name="UnderlineButton" Content="U" Click="UnderlineButton_Click"/>
				<Separator/>
				<ComboBox x:Name="FontFamilyBox" Width="150" SelectionChanged="FontFamilyBox_SelectionChanged"/>
				<ComboBox x:Name="FontSizeBox" Width="60" SelectionChanged="FontSizeBox_SelectionChanged"/>
				<Button Content="Boja" Click="ColorButton_Click"/>
			</ToolBar>
		</ToolBarTray>

		<!-- RichTextBox -->
		<RichTextBox x:Name="OpisBox" Grid.Row="1" Margin="0,50,0,30" AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto" />

		<!-- Status Bar -->
		<StatusBar Grid.Row="2">
			<StatusBarItem>
				<TextBlock x:Name="WordCountText" Text="Broj reči: 0"/>
			</StatusBarItem>
			<StatusBarItem HorizontalAlignment="Right">
				<StackPanel Orientation="Horizontal">
					<Button Content="Otkaži" Click="Otkazi_Click" Margin="5"/>
					<Button Content="Dodaj" Click="Dodaj_Click" Margin="5"/>
				</StackPanel>
			</StatusBarItem>
		</StatusBar>
	</Grid>
</Window>
