<Window x:Class="IUiUS_Projekat.Views.DodajKursWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodavanje novog kursa" Height="500" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <Label Content="Naziv kursa:"/>
            <TextBox x:Name="NazivBox" Margin="0,0,0,5"/>

            <Label Content="Cena:"/>
            <TextBox x:Name="CenaBox" Margin="0,0,0,5"/>


            <Button Content="Izaberi sliku" Click="IzaberiSliku_Click" Margin="0,0,0,5"/>
            <Image x:Name="SlikaPreview" Height="100" Margin="0,0,0,10"/>

            <Label Content="Opis kursa (.rtf):"/>
            <RichTextBox x:Name="OpisBox" Height="150" Margin="0,0,0,5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Content="Otkaz i" Click="Otkazi_Click" Margin="5"/>
            <Button Content="Dodaj" Click="Dodaj_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
