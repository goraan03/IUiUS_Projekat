<Window x:Class="IUiUS_Projekat.Views.PrikazKursaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pregled kursa" Height="500" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Naziv kursa:" FontWeight="Bold"/>
        <TextBlock Text="{Binding Naziv}" Grid.Row="0" Margin="120,0,0,0"/>

        <TextBlock Text="Cena:" Grid.Row="1" FontWeight="Bold" />
        <TextBlock Text="{Binding Cena}" Grid.Row="1" Margin="120,0,0,0"/>

        <TextBlock Text="Datum dodavanja:" Grid.Row="2" FontWeight="Bold" />
        <TextBlock Text="{Binding DatumDodavanja}" Grid.Row="2" Margin="120,0,0,0"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <Image Source="{Binding SlikaPath}" Width="200" Height="200" Stretch="Uniform" Margin="0,0,10,0"/>
            <RichTextBox IsReadOnly="True" Width="300" Height="200" Name="OpisBox"/>
        </StackPanel>

        <Button Content="Zatvori" Grid.Row="4" Width="80" Height="30" HorizontalAlignment="Right" Click="Zatvori_Click" Margin="0,10,0,0"/>
    </Grid>
</Window>
